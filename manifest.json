{
  "name": "ニコニコ コメント自動非表示",
  "author": "twashio",
  "description": "ニコニコ動画のコメントをデフォルトで非表示にします。",
  "version": "1.0.2",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://www.nicovideo.jp/watch/*"],
      "js": ["/script.js"]
    }
  ],
  "icons":{
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
